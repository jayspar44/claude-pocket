{
  "appId": "com.claudecode.pocket",
  "appName": "claude-pocket",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "Keyboard": {
      "resize": "body",
      "style": "dark",
      "resizeOnFullScreen": false
    },
    "StatusBar": {
      "overlay": true
    },
    "SystemBars": {
      "insetsHandling": "disable"
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_code",
      "sound": "default"
    }
  }
}