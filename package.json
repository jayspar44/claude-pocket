{
  "name": "claude-pocket",
  "version": "0.4.0",
  "description": "Mobile-first client for Claude Code CLI",
  "main": "relay/src/index.js",
  "scripts": {
    "install-all": "npm install --include=dev && cd app && npm install --include=dev && cd ../relay && npm install --include=dev",
    "build": "npm run install-all && cd app && npm run build",
    "lint": "npm run lint --prefix app && npm run lint --prefix relay",
    "start": "node relay/src/index.js",
    "dev": "nodemon relay/src/index.js",
    "dev:local": "node scripts/dev-with-ports.js",
    "dev:relay": "cd relay && npm run dev",
    "dev:app": "cd app && npm start",
    "build:app": "cd app && npm run build",
    "android": "cd app && npm run android",
    "android:dev": "cd app && npm run android:dev",
    "android:local": "cd app && npm run android:local",
    "android:local-livereload": "cd app && npm run android:local-livereload",
    "apk": "cd app && npm run apk",
    "apk:dev": "cd app && npm run apk:dev",
    "apk:local": "cd app && npm run apk:local",
    "apk:prod": "cd app && npm run apk:prod",
    "test:app": "cd app && npm test",
    "deploy": "./scripts/deploy.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop claude-pocket-relay claude-pocket-app",
    "pm2:restart": "pm2 restart claude-pocket-relay claude-pocket-app",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "version:get": "node scripts/get-version.js",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:first": "standard-version --first-release",
    "prepare": "node -e \"try{require.resolve('husky')}catch(e){process.exit(0)}\" && husky"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.4",
    "standard-version": "^9.5.0"
  }
}
